{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "none"
    }
  },
  "files": {
    "ignore": [
      "dist/**/*",
      "old/**/*",
      ".astro/**/*",
      "node_modules/**/*",
      "pnpm-lock.json"
    ]
  }
}
